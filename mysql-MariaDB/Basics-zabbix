SHOW DATABASES;

DROP DATABASE zabbix;

create database zabbix;
grant all privileges on zabbix.* to zabbix@'localhost' identified by 'root@zabbix';
grant all privileges on zabbix.* to zabbix@'%' identified by 'root@zabbix';
flush privileges;

exit

